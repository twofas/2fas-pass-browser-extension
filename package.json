{
  "name": "2fas-pass-browser-extension",
  "description": "This is the official 2FAS Pass Browser Extension project.",
  "version": "1.4.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/twofas/2fas-pass-browser-extension"
  },
  "author": {
    "name": "2FAS",
    "url": "https://github.com/twofas"
  },
  "bugs": {
    "url": "https://github.com/twofas/2fas-pass-browser-extension/issues"
  },
  "scripts": {
    "dev": "yarn generate-enc-keys-dev && wxt --mv3",
    "dev:edge": "yarn generate-enc-keys-dev && wxt -b edge --mv3",
    "build": "yarn generate-enc-keys-prod && wxt build --mv3",
    "build:dev": "yarn generate-enc-keys-dev && wxt build --mode development --mv3",
    "build:firefox": "yarn generate-enc-keys-prod && wxt build -b firefox --mv3",
    "build:firefox:dev": "yarn generate-enc-keys-dev && wxt build -b firefox --mode development --mv3",
    "build:edge": "yarn generate-enc-keys-prod && wxt build -b edge --mv3",
    "build:edge:dev": "yarn generate-enc-keys-dev && wxt build -b edge --mode development --mv3",
    "build:safari": "yarn lint && yarn generate-enc-keys-prod && wxt build -b safari --mv3",
    "build:safari:dev": "yarn generate-enc-keys-dev && wxt build -b safari --mode development --mv3",
    "zip": "yarn generate-enc-keys-prod && wxt zip --mv3",
    "zip:dev": "yarn generate-enc-keys-dev && wxt zip --mode development --mv3",
    "zip:firefox": "yarn generate-enc-keys-prod && wxt zip -b firefox --mv3",
    "zip:firefox:dev": "yarn generate-enc-keys-dev && wxt zip -b firefox --mode development --mv3",
    "zip:edge": "yarn generate-enc-keys-prod && wxt zip -b edge --mv3",
    "zip:edge:dev": "yarn generate-enc-keys-dev && wxt zip -b edge --mode development --mv3",
    "all-build": "yarn lint && yarn all-build:prod && yarn all-build:dev",
    "all-build:prod": "yarn test && yarn generate-license-info && yarn zip && yarn zip:firefox && yarn zip:edge && yarn build:safari",
    "all-build:dev": "yarn test && yarn zip:dev && yarn zip:firefox:dev && yarn zip:edge:dev && yarn build:safari:dev",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "prepare:debug": "wxt prepare --debug",
    "generate-enc-keys-dev": "node ./build_scripts/generateEncKeys.js mode=DEVELOPMENT",
    "generate-enc-keys-prod": "node ./build_scripts/generateEncKeys.js mode=PRODUCTION",
    "loco-import": "node ./build_scripts/locoImport.js",
    "prepare": "wxt prepare",
    "analyze": "wxt build --analyze --analyze-open",
    "test": "vitest --run",
    "test-watch": "vitest",
    "generate-license-info-html": "npx -y license-report --output=html >> open-source-licenses.html",
    "generate-license-info-json": "npx -y license-report --output=json >> open-source-licenses.json",
    "generate-license-info": "yarn generate-license-info-html && yarn generate-license-info-json",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "dependencies": {
    "@lottiefiles/react-lottie-player": "^3.6.0",
    "@splidejs/react-splide": "^0.7.12",
    "@tanstack/react-virtual": "^3.13.13",
    "final-form": "^5.0.0",
    "motion": "^12.23.26",
    "parse-domain": "^8.2.2",
    "primereact": "^10.9.7",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-error-boundary": "^6.0.0",
    "react-final-form": "^7.0.0",
    "react-router": "^7.10.1",
    "react-select": "^5.10.2",
    "react-toastify": "^11.0.5",
    "universal-base64url": "^1.1.0",
    "uuid": "^13.0.0",
    "vite-plugin-svgr": "^4.5.0",
    "xss": "^1.0.15",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@wxt-dev/module-react": "^1.1.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "sass-embedded": "1.96.0",
    "terser": "^5.44.1",
    "vitest": "^4.0.15",
    "wxt": "^0.20.11"
  }
}
